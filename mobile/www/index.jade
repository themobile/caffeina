html
head
    meta(charset='utf-8')
    meta(name='viewport', content='initial-scale=1, maximum-scale=1, user-scalable=no, width=device-width')
    title Ionic Seed App


    //
       caffeina css
    link(href='css/app.css', rel='stylesheet')
    link(href='css/datepicker/datepicker.css', rel='stylesheet')
    link(href='lib/js/famous-angular/famous-angular.css', rel='stylesheet')


    //
          'starter' is the name of this angular module (js/app.js)
    //body(ng-app='caffeina', animation='slide-left-right-ios7')
    body(animation='slide-left-right-ios7')

        ion-side-menus(ng-cloak,delegate-handle="home_screen")
            //
                 Center content
            ion-side-menu-content(drag-content="shouldDragContent()")


                // if state is ADD then navbar is custom, otherwise is standard
                ion-nav-bar(ng-controller='MenuController',ng-show='!isInAdd')
                    ion-nav-buttons(side='left')
                        button.button.icon.ion-navicon.button-clear(ng-click="toggleLeft()")
                    ion-nav-buttons(side='right')
                        button.button.button-large.button-clear.icon.ion-ios7-plus-empty.padding-right(ng-cloak,ng-click="add()")
                        button.button.button-large.button-clear.icon.ion-ios7-search.padding-left(ng-cloak)


                // views
                ion-nav-view


            //
               Left menu
            ion-side-menu(side='left',ng-controller='MenuController')
                .list
                    a.item.item-icon-left(href='#/home' ,nav-clear ,menu-close )
                        i.icon.ion-home
                        | Home

                    a.item.item-icon-left(href='#/tests' ,nav-clear ,menu-close )
                        i.icon.ion-chatbubble-working
                        | Tests

                    a.item.item-icon-left(href='#/chat' ,nav-clear ,menu-close )
                        i.icon.ion-chatbubble-working
                        | Chat

                    a.item.item-icon-left(href='#/sortable' ,nav-clear ,menu-close )
                        i.icon.ion-alert-circled
                        | Sortable

                    a.item.item-icon-left(href="#/login",ng-if="!user.id",menu-close,nav-clear)
                        i.icon.ion-email
                        | Login
                    a.item.item-icon-left(href='#/',ng-click='logout()', ng-if="user.id",nav-clear ,menu-close )
                        i.icon.ion-log-out
                        | Logout

                    p.item(ng-show="user.id") Welcome {{user.displayName}}


