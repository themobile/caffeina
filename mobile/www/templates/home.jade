        button.button(ng-click="addLead()") Add lead
        button.button(ng-click="updateLead()") Update lead
        button.button(ng-click="removeLead()") Remove lead
        button.button(ng-click="getLeadsMonth()") Get lead/month



        ul(ng-repeat="lead in leaduri | orderByPriority")
            li {{lead.start}}


        //next events after current date , limited to 3
        ul.dada(ng-repeat="event in events | next3futureEvents | limitTo: 3")
            li {{event.title}}