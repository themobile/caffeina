//
      This template loads for the 'tab.about' state (app.js)
ion-view(title='Chat')
    ion-content(padding='true', ng-controller='about')
        #messagesDiv
            div(ng-repeat='msg in messages')
                em {{msg.from}}
                | : {{msg.body}}
        //input(type='text', ng-model='nume', placeholder='Name')
        //input(type='text', ng-model='mesaj', ng-keydown='addMessage($event)', placeholder='Message...')
        .list
            label.item.item-input
                span.input-label Name
                input(type='text', ng-model='nume')
            label.item.item-input
                span.input-label Message
                input(type='text', ng-model='mesaj', ng-keydown='addMessage($event)')




